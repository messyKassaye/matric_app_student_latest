<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.students.preparation.matric.students">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application
        android:name=".FirebaseHandler"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/wt_bg"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".modules.Students.activities.SubjectsExamActivity"
            android:label="@string/title_activity_subjects_exam"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".modules.teachers.TeachersDashboard"
            android:label="@string/title_activity_teachers_dashboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".modules.Students.activities.StartTestActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".modules.Students.fragment.AddShortNotesFragment"
            android:label="Add your short notes" />
        <activity android:name=".modules.Home.LoginActivity" />
        <activity
            android:name=".modules.Home.contact.ContactActivity"
            android:label="@string/contact_us_" />

        <activity
            android:name=".modules.Students.fragment.entranceexam.ExamActivity"
            android:label="@string/enterance_exam_" />


        <activity
            android:name=".SplashScreen"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".modules.Home.registration.Registration"
            android:label="Registration"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".modules.Students.StudentDashboard"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".modules.Students.fragment.modelexam.ModelYearList"
            android:label="@string/model_exam_" />
        <activity
            android:name=".modules.Students.fragment.modelexam.ModelActivity"
            android:label="@string/model_exam_" />
    </application>

</manifest>